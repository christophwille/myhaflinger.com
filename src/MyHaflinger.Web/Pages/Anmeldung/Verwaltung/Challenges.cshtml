@page
@model MyHaflinger.Web.Pages.Anmeldung.Verwaltung.ChallengesModel
@{
    ViewData["Title"] = "Latest Challenges";
    Layout = "_Layout.Anmeldung";
}

<div class="row">
    <div class="col-md-10">
        <h1>Challenges DESC</h1>

        <table class="table table-striped table-bordered table-condensed">
            <thead>
            <tr>
                <th>Date</th>
                <th>Email</th>
                <th>Token</th>
                <th>1st Redemption</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var line in Model.Challenges)
            {
                var link = $"{Model.Scheme}://{Model.Host}/Anmeldung/Formular?token={line.ChallengeGuid}";
                <tr>
                    <td>@(line.ChallengeRequested.ToString("dd.MM.yy_HH:mm"))</td>
                    <td>@line.EmailAddress</td>
                    <td>@link</td>
                    <td>@(line.FirstTokenRedemption?.ToString("dd.MM.yy_HH:mm"))</td>
                </tr>
            }
            </tbody>
        </table>

    </div>
</div>

